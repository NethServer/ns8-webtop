set -e

# Read POSTGRES_PASSWORD from secrets.env
POSTGRES_PASSWORD=$(grep "^POSTGRES_PASSWORD=" secrets.env | cut -d= -f2)

# Run pg_dump with the password
podman exec --env POSTGRES_PASSWORD postgres pg_dump -U postgres --format=c webtop5 > webtop5.dump
